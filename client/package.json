{
  "name": "dongin-secure",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --win nsis --x64",
    "build:32": "electron-builder --win nsis --ia32",
    "build:all": "electron-builder --win nsis"
  },
  "dependencies": {
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "electron": "^33.0.2",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.dongin.secure",
    "productName": "DONGIN SECURE",
    "win": {
      "target": {
        "target": "nsis",
        "arch": ["x64"]
      },
      "icon": "icon.ico"
    },
    "nsis": {
      "artifactName": "${productName}_v${version}_Setup.exe",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "differentialPackage": false
    },
    "publish": {
      "provider": "generic",
      "url": "http://192.168.0.254:8000/updates"
    }
  }
}